<xsd:schema version="1.0"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://vesalainen.org/schema/sijat"
        xmlns="http://vesalainen.org/schema/sijat"
        elementFormDefault="qualified">
    <xsd:element name="sijat">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="sija" type="sijaType" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:complexType name="sijaType">
        <xsd:sequence>
            <xsd:element name="esimerkki" type="esimerkkiType" maxOccurs="unbounded"/>
        </xsd:sequence>
        <xsd:attribute name="tyyppi" type="xsd:string"/>
        <xsd:attribute name="numero" type="xsd:unsignedShort"/>
    </xsd:complexType>
    <xsd:complexType name="esimerkkiType">
        <xsd:sequence>
            <xsd:element name="taivutus" type="taivutusTyyppiType" maxOccurs="unbounded"/>
        </xsd:sequence>
        <xsd:attribute name="perus" type="xsd:string"/>
        <xsd:attribute name="ehto" type="xsd:string"/>
    </xsd:complexType>
    <xsd:complexType name="taivutusTyyppiType">
        <xsd:attribute name="sija" type="xsd:string"/>
        <xsd:attribute name="esim" type="xsd:string"/>
    </xsd:complexType>
</xsd:schema>
